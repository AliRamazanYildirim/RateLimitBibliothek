{
  "IpRateBegerenzungPolitiken": {
    "IpRules": [
      {
        "Ip": "::1",
        "Rules": [
          {
            "Endpoint": "*:/api/kunde",
            "Period": "30s",
            "Limit": 2
          }
        ]
      }
    ]
  },
  "IpRateBegerenzung": {
    "QuotaExceededResponse": {
      "Content": "{{ \"Nachricht\":\"Anforderungslimit überschritten. \", \"Detail\": \"Die Anzahl der zulässigen Anforderungen wird  {0} mal in {1}. Versuchen Sie es in {2} Sekunden erneut.\"  }}",
      "ContentType": "application/json"
    },
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Real-IP",
    "ClientIdHeader": "X-ClientId",
    "HttpStatusCode": 429,
    "IpWhitelist": [ "127.0.0.1" ],
    "EndpointWhitelist": [ "put:/api/kunde", "*:/api/status" ],
    "GeneralRules": [
      {
        "Endpoint": "*:/api/kunde",
        "Period": "20s",
        "Limit": 2
      },
      {
        "Endpoint": "*:/api/kunde",
        "Period": "1h",
        "Limit": 360
      },
      {
        "Endpoint": "*:/api/kunde/*",
        "Period": "10s",
        "Limit": 2
      }
    ]
  },
    "Logging": {
      "LogLevel": {
        "Default": "Information",
        "Microsoft.AspNetCore": "Warning"
      }
    },
    "AllowedHosts": "*"
  }